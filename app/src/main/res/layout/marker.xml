<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#dfdfdf"
    android:padding="5dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/markerImage"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_add_location_black_24dp"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Location name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_toRightOf="@+id/markerImage"/>

    <TextView
        android:id="@+id/btnBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_bookmark"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:drawableRight="@drawable/ic_right_black_24dp"
        android:layout_toRightOf="@+id/markerImage"
        android:layout_below="@+id/tvLocationName"
        android:textColor="@color/colorAccent"/>

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvLocationName"
        android:layout_alignBottom="@+id/btnBookmark"
        android:layout_toLeftOf="@+id/tvLocationName"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>